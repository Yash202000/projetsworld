model Student {
  id     Int     @id @default(autoincrement())
  name   String
  email  String @unique
  year   Int

  courseId Int?
  course Course? @relation(fields: [courseId], references: [id]) 
}

model Course {
  id       Int       @id @default(autoincrement())
  name     String

  students Student[]
}